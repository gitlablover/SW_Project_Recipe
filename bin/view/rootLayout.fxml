<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.rootLayoutController">
	<top>
		<MenuBar BorderPane.alignment="CENTER">
			<menus>
				<Menu mnemonicParsing="false" text="Action">
					<items>
						<MenuItem fx:id="closeItem" mnemonicParsing="false" onAction="#closeEvent" text="Quit Recipe Box" />
					</items>
				</Menu>
				<Menu mnemonicParsing="false" text="Want NEW Recipes?">
					<items>
						<MenuItem fx:id="aboutItem" mnemonicParsing="false" onAction="#aboutEvent" text="Browse Online" />
					</items>
				</Menu>
			</menus>
		</MenuBar>
	</top>
</BorderPane>
